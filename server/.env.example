# --- Server configuration ---
PORT=5175
JWT_SECRET=change_me_to_a_long_random_string

# Public URL of the API server (required by Pesapal callback/IPN)
# Example (local): http://localhost:5175
APP_PUBLIC_URL=http://localhost:5175

# Public URL of the client (used for redirects after Pesapal payment)
# Example (local): http://localhost:5173
CLIENT_PUBLIC_URL=http://localhost:5173

# CORS: allowed origins (comma-separated). If blank, server allows all.
CLIENT_ORIGIN=http://localhost:5173

# --- Pesapal (Activation Fee - external) ---
# Paste your credentials here:
PESAPAL_CONSUMER_KEY=PASTE_YOUR_CONSUMER_KEY_HERE
PESAPAL_CONSUMER_SECRET=PASTE_YOUR_CONSUMER_SECRET_HERE

# sandbox | live
PESAPAL_MODE=sandbox

# IMPORTANT: Register an IPN URL in your Pesapal dashboard
# and paste the generated IPN ID here.
PESAPAL_IPN_ID=PASTE_YOUR_IPN_ID_HERE

# Optional: overrides
PESAPAL_CURRENCY=KES
PESAPAL_COUNTRY=KE
PESAPAL_BRANCH=SynthGraphix
